{
  "name": "db_provision_fail",
  "title": "mock db",

  "datacenter": {
    "provider": { "vendor": "mock" },
    "network": {
      "cidr": "192.168.0.0/16",

      "subnet_groups": [
        {
          "subnet": "postgres",
          "cidr":   "192.168.4.0/24",
          "access": "local"
        }
      ],

      "security_groups": [
        {
          "security_group": "postgres",
          "rules": [
            {
              "description": "postgres",
              "directions":  [ "ingress" ],
              "remotes":     [ "cidr:local" ],
              "protocols":   [ "tcp" ],
              "ports":       [ "5432" ]
            }
          ]
        }
      ]

    }
  },

  "database_service": {
    "provider": {
      "vendor": "mock",
      "data":   { "db.Provision": "error" }
    },
    "databases": [
      {
        "database":        "testdb",
        "engine":          "postgress",
        "version":         "9.6.5",
        "type":            "db.m4.large",
        "port":            5432,
        "subnet_group":    "postgres",
        "security_groups": [ "postgres" ],
        "storage":         { "type": "gp2", "size": 50 },
        "master":          { "username": "myuser", "password": "mypasswd" }
      }
    ]
  }
}
